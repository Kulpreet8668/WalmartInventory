@model WalmartInventory.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Detail of Product</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShelfName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShelfName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RetailPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RetailPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
    </dl>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |*@
    <a asp-action="Index">Back to List</a>
</div>





<form method="post" action="/Items/AddToCart">
    <input type="hidden" id="ProductId" name="ProductId" value="@Model.ProductId" />
    <div class="form-group">
        <label class="control-label" for="Quantity">Quantity to add:</label>
        <input name="Quantity" id="Quantity" required min="1" max="1000" type="number" class="input-small" />
    </div>
    <button class="btn btn-primary">Add to Cart</button>

</form>

<a class="btn btn-secondary" href="javascript:history.go(-1);"> Back to Product</a>
