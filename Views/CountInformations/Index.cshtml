@model IEnumerable<WalmartInventory.Models.CountInformation>

@{
    ViewData["Title"] = "Index";
}

<h2>Inventory Information</h2>

<p>
    <a asp-action="Create"><h3>Create New</h3></a>
</p>
<table class="table font-weight-bold h3 table-hover shadow text-primary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Onhand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Onhand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ShelfName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count.CountId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CountInformationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CountInformationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CountInformationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
