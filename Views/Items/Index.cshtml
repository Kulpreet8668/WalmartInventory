@model IEnumerable<WalmartInventory.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Items</h1>
<section class="row card-group">
    @foreach (var item in Model)
    {<!--css from https://getbootstrap.com/docs/4.0/components/card/-->
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><b>@item.Name</b></h5>
               
                <a class="btn btn-primary" asp-controller="Items" asp-action="browse" asp-route-id="@item.DepartmentId">Product</a>
            </div>
        </div>



    }


</section>

